<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnAddCustomerWindow" Content="Add Customer" HorizontalAlignment="Left" Margin="20,18,0,0" VerticalAlignment="Top" Click="btnAddCustomerWindow_Click" />
        <Button x:Name="btnRemoveCustomerWindow" Content="Remove Customer" HorizontalAlignment="Left" Margin="105,18,0,0" VerticalAlignment="Top" Click="btnRemoveCustomerWindow_Click"/>
        <Button x:Name="btnRefreshCustomer" Content="Refresh Grid" HorizontalAlignment="Left" Margin="211,18,0,0" VerticalAlignment="Top" Click="btnRefreshCustomer_Click"/>
        <DataGrid x:Name="customerDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,50,0,-50" MouseDoubleClick="customerDataGrid_MouseDoubleClick"/>

    </Grid>
</Window>
